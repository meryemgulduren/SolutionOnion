@model SO.Application.Features.Queries.AccountModule.Authentication.GetUserProfile.GetUserProfileQueryResponse
@{
    ViewData["Title"] = "Profil";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <!-- Modern Profile Header -->
            <div class="card border-0 shadow-lg mb-4" style="border-radius: 20px; overflow: hidden;">
                <div class="card-header position-relative" style="background: linear-gradient(135deg, #0B1426 0%, #1a2332 50%, #2a3f5f 100%); border: none; padding: 2rem;">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="profile-avatar" style="width: 80px; height: 80px; background: linear-gradient(135deg, #4a6fa5, #6b9bd2); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 8px 25px rgba(74, 111, 165, 0.3);">
                                <i class="fas fa-user fa-2x text-white"></i>
                            </div>
                        </div>
                        <div class="col">
                            <h2 class="text-white mb-1" style="font-weight: 600; font-size: 1.8rem;">
                                <i class="fas fa-user-circle me-2"></i>
                                Kullanıcı Profili
                            </h2>
                            <p class="text-white-50 mb-0" style="font-size: 1rem;">Hesap bilgilerinizi görüntüleyin ve yönetin</p>
                        </div>
                    </div>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <!-- Personal Information Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-dark mb-3" style="font-weight: 600; border-bottom: 2px solid #f8f9fa; padding-bottom: 0.5rem;">
                                <i class="fas fa-user me-2 text-primary"></i>Kişisel Bilgiler
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <label class="form-label fw-bold text-muted" style="font-size: 0.9rem; margin-bottom: 0.25rem;">Ad Soyad</label>
                                <div class="info-value" style="background: #f8f9fa; border: 1px solid #e9ecef; border-radius: 8px; padding: 0.75rem; font-size: 1rem; color: #495057;">
                                    <i class="fas fa-user me-2 text-primary"></i>@Model.FullName
                                </div>
                            </div>
                            
                            <div class="info-item mb-3">
                                <label class="form-label fw-bold text-muted" style="font-size: 0.9rem; margin-bottom: 0.25rem;">E-posta</label>
                                <div class="info-value" style="background: #f8f9fa; border: 1px solid #e9ecef; border-radius: 8px; padding: 0.75rem; font-size: 1rem; color: #495057;">
                                    <i class="fas fa-envelope me-2 text-primary"></i>@Model.Email
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <label class="form-label fw-bold text-muted" style="font-size: 0.9rem; margin-bottom: 0.25rem;">Kullanıcı Adı</label>
                                <div class="info-value" style="background: #f8f9fa; border: 1px solid #e9ecef; border-radius: 8px; padding: 0.75rem; font-size: 1rem; color: #495057;">
                                    <i class="fas fa-at me-2 text-primary"></i>@Model.UserName
                                </div>
                            </div>
                            
                            <div class="info-item mb-3">
                                <label class="form-label fw-bold text-muted" style="font-size: 0.9rem; margin-bottom: 0.25rem;">Hesap Durumu</label>
                                <div class="info-value" style="background: #f8f9fa; border: 1px solid #e9ecef; border-radius: 8px; padding: 0.75rem; font-size: 1rem;">
                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")" style="font-size: 0.8rem; padding: 0.4rem 0.8rem;">
                                        <i class="fas fa-circle me-1" style="font-size: 0.6rem;"></i>
                                        @(Model.IsActive ? "Aktif" : "Pasif")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Account Information Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-dark mb-3" style="font-weight: 600; border-bottom: 2px solid #f8f9fa; padding-bottom: 0.5rem;">
                                <i class="fas fa-info-circle me-2 text-primary"></i>Hesap Bilgileri
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <label class="form-label fw-bold text-muted" style="font-size: 0.9rem; margin-bottom: 0.25rem;">Kayıt Tarihi</label>
                                <div class="info-value" style="background: #f8f9fa; border: 1px solid #e9ecef; border-radius: 8px; padding: 0.75rem; font-size: 1rem; color: #495057;">
                                    <i class="fas fa-calendar-plus me-2 text-primary"></i>@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <label class="form-label fw-bold text-muted" style="font-size: 0.9rem; margin-bottom: 0.25rem;">Son Giriş</label>
                                <div class="info-value" style="background: #f8f9fa; border: 1px solid #e9ecef; border-radius: 8px; padding: 0.75rem; font-size: 1rem; color: #495057;">
                                    <i class="fas fa-sign-in-alt me-2 text-primary"></i>
                                    @(Model.LastLoginDate?.ToString("dd.MM.yyyy HH:mm") ?? "Hiç giriş yapılmamış")
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Roles Section -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-dark mb-3" style="font-weight: 600; border-bottom: 2px solid #f8f9fa; padding-bottom: 0.5rem;">
                                <i class="fas fa-shield-alt me-2 text-primary"></i>Yetkiler
                            </h5>
                            <div class="info-value" style="background: #f8f9fa; border: 1px solid #e9ecef; border-radius: 8px; padding: 0.75rem; font-size: 1rem;">
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var role in Model.Roles)
                                    {
                                        <span class="badge bg-primary" style="font-size: 0.8rem; padding: 0.5rem 1rem; border-radius: 20px;">
                                            <i class="fas fa-user-shield me-1"></i>@role
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer" style="background: #f8f9fa; border-top: 1px solid #e9ecef; padding: 2rem;">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 10px; border: none; box-shadow: 0 2px 10px rgba(25, 135, 84, 0.1);">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <!-- Modern Action Buttons -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="action-section">
                                <h6 class="text-dark mb-3" style="font-weight: 600; color: #495057 !important;">
                                    <i class="fas fa-cog me-2 text-primary"></i>Profil Yönetimi
                                </h6>
                                <div class="d-grid gap-2">
                                    <a asp-action="EditProfile" class="btn btn-modern" style="background: linear-gradient(135deg, #2a3f5f, #4a6fa5); color: white; border-radius: 10px; padding: 0.75rem 1.5rem; font-weight: 500; transition: all 0.3s ease; border: none; box-shadow: 0 2px 10px rgba(42, 63, 95, 0.2);">
                                        <i class="fas fa-user-edit me-2"></i>Profili Düzenle
                                    </a>
                                    <a asp-action="ChangePassword" class="btn btn-modern" style="background: linear-gradient(135deg, #2a3f5f, #4a6fa5); color: white; border-radius: 10px; padding: 0.75rem 1.5rem; font-weight: 500; transition: all 0.3s ease; border: none; box-shadow: 0 2px 10px rgba(42, 63, 95, 0.2);">
                                        <i class="fas fa-lock me-2"></i>Şifre Değiştir
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="action-section">
                                <h6 class="text-dark mb-3" style="font-weight: 600; color: #495057 !important;">
                                    <i class="fas fa-tools me-2 text-primary"></i>Hesap İşlemleri
                                </h6>
                                <div class="d-grid gap-2">
                                    <a asp-action="Logout" class="btn btn-modern" style="background: linear-gradient(135deg, #2a3f5f, #4a6fa5); color: white; border-radius: 10px; padding: 0.75rem 1.5rem; font-weight: 500; transition: all 0.3s ease; border: none; box-shadow: 0 2px 10px rgba(42, 63, 95, 0.2);"
                                       onclick="return confirm('Çıkış yapmak istediğinizden emin misiniz?')">
                                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                    </a>
                                    <a asp-action="Delete" class="btn btn-danger btn-modern" style="border-radius: 10px; padding: 0.75rem 1.5rem; font-weight: 500; transition: all 0.3s ease; border: none; box-shadow: 0 2px 10px rgba(220, 53, 69, 0.2);"
                                       onclick="return confirm('Hesabınızı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!')">
                                        <i class="fas fa-trash me-2"></i>Hesabı Sil
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Modern Button Hover Effects */
        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15) !important;
        }
        
        .btn-modern:active {
            transform: translateY(0);
        }
        
        /* Info Item Hover Effects */
        .info-item:hover .info-value {
            background: #e9ecef !important;
            border-color: #4a6fa5 !important;
            transition: all 0.3s ease;
        }
        
        /* Profile Avatar Animation */
        .profile-avatar {
            transition: all 0.3s ease;
        }
        
        .profile-avatar:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 30px rgba(74, 111, 165, 0.4) !important;
        }
        
        /* Card Hover Effect */
        .card:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }
        
        /* Badge Hover Effects */
        .badge:hover {
            transform: scale(1.05);
            transition: all 0.2s ease;
        }
        
        /* Responsive Design */
        @@media (max-width: 768px) {
            .profile-avatar {
                width: 60px !important;
                height: 60px !important;
            }
            
            .card-header h2 {
                font-size: 1.4rem !important;
            }
            
            .card-header p {
                font-size: 0.9rem !important;
            }
        }
    </style>
}
