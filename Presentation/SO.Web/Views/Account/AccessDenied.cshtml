@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Access Denied
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-4x text-danger mb-3"></i>
                        <h5 class="text-danger">You don't have permission to access this page!</h5>
                        <p class="text-muted">
                            You may not have the required permissions or your session may have expired.
                        </p>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-md-2">
                            <i class="fas fa-home me-2"></i>Home
                        </a>
                        <a asp-action="Login" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In Again
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
