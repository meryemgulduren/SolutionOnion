@model SO.Application.Features.Commands.AccountModule.Profile.EditProfile.EditProfileCommandRequest
@{
    ViewData["Title"] = "Profili Düzenle";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">
                <div class="card-header position-relative" style="background: linear-gradient(135deg, #0B1426 0%, #1a2332 50%, #2a3f5f 100%); border: none; padding: 2rem;">
                    <h2 class="text-white mb-0" style="font-weight: 600; font-size: 1.8rem;">
                        <i class="fas fa-user-edit me-2"></i>
                        Profili Düzenle
                    </h2>
                    <p class="text-white-50 mb-0 mt-2" style="font-size: 1rem;">Kişisel bilgilerinizi güncelleyin</p>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="ProfilePicture" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 10px; border: none;"></div>

                        <!-- Profile Picture Section -->
                        <div class="text-center mb-4">
                            <div class="profile-picture-container" style="position: relative; display: inline-block;">
                                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                                {
                                    <img src="@Model.ProfilePicture" class="rounded-circle profile-picture" width="120" height="120" alt="Profil Resmi" style="border: 4px solid #4a6fa5; box-shadow: 0 8px 25px rgba(74, 111, 165, 0.3);" />
                                }
                                else
                                {
                                    <div class="bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center profile-picture" style="width: 120px; height: 120px; background: linear-gradient(135deg, #4a6fa5, #6b9bd2); box-shadow: 0 8px 25px rgba(74, 111, 165, 0.3);">
                                        <i class="fas fa-user fa-3x text-white"></i>
                                    </div>
                                }
                                <div class="profile-picture-overlay" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); border-radius: 50%; display: flex; align-items: center; justify-content: center; opacity: 0; transition: all 0.3s ease;">
                                    <i class="fas fa-camera text-white fa-lg"></i>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="ProfilePictureFile" class="form-label fw-bold" style="color: #495057;">
                                        <i class="fas fa-image me-2 text-primary"></i>Profil Resmi
                                    </label>
                                    <input asp-for="ProfilePictureFile" class="form-control modern-input" type="file" accept="image/*" style="border-radius: 10px; border: 2px solid #e9ecef; padding: 0.75rem; transition: all 0.3s ease;" />
                                    <span asp-validation-for="ProfilePictureFile" class="text-danger"></span>
                                    <div class="form-text" style="color: #6c757d; font-size: 0.875rem;">
                                        <i class="fas fa-info-circle me-1"></i>JPG, PNG veya GIF formatında, maksimum 5MB
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UserName" class="form-label fw-bold" style="color: #495057;">
                                        <i class="fas fa-at me-2 text-primary"></i>Kullanıcı Adı
                                    </label>
                                    <input asp-for="UserName" class="form-control modern-input" style="border-radius: 10px; border: 2px solid #e9ecef; padding: 0.75rem; transition: all 0.3s ease;" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label fw-bold" style="color: #495057;">
                                        <i class="fas fa-envelope me-2 text-primary"></i>E-posta
                                    </label>
                                    <input asp-for="Email" class="form-control modern-input" style="border-radius: 10px; border: 2px solid #e9ecef; padding: 0.75rem; transition: all 0.3s ease;" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="FullName" class="form-label fw-bold" style="color: #495057;">
                                        <i class="fas fa-user me-2 text-primary"></i>Ad Soyad
                                    </label>
                                    <input asp-for="FullName" class="form-control modern-input" style="border-radius: 10px; border: 2px solid #e9ecef; padding: 0.75rem; transition: all 0.3s ease;" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-modern" style="border-radius: 10px; padding: 0.75rem 2rem; font-weight: 500; transition: all 0.3s ease; border: none; box-shadow: 0 2px 10px rgba(13, 110, 253, 0.2);">
                                <i class="fas fa-save me-2"></i>
                                Güncelle
                            </button>
                            <a asp-action="Profile" class="btn btn-secondary btn-modern" style="border-radius: 10px; padding: 0.75rem 2rem; font-weight: 500; transition: all 0.3s ease; border: none; box-shadow: 0 2px 10px rgba(108, 117, 125, 0.2);">
                                <i class="fas fa-arrow-left me-2"></i>
                                Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Modern Input Focus Effects */
        .modern-input:focus {
            border-color: #4a6fa5 !important;
            box-shadow: 0 0 0 3px rgba(74, 111, 165, 0.1) !important;
            outline: none;
        }
        
        /* Profile Picture Hover Effects */
        .profile-picture-container:hover .profile-picture-overlay {
            opacity: 1 !important;
        }
        
        .profile-picture {
            transition: all 0.3s ease;
        }
        
        .profile-picture-container:hover .profile-picture {
            transform: scale(1.05);
        }
        
        /* Modern Button Hover Effects */
        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15) !important;
        }
        
        .btn-modern:active {
            transform: translateY(0);
        }
        
        /* Form Group Hover Effects */
        .form-group:hover .modern-input {
            border-color: #4a6fa5 !important;
        }
        
        /* Card Hover Effect */
        .card:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }
        
        /* File Input Styling */
        .form-control[type="file"] {
            cursor: pointer;
        }
        
        .form-control[type="file"]::-webkit-file-upload-button {
            background: linear-gradient(135deg, #4a6fa5, #6b9bd2);
            color: white;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1rem;
            margin-right: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .form-control[type="file"]::-webkit-file-upload-button:hover {
            background: linear-gradient(135deg, #3a5f95, #5b8bc2);
            transform: translateY(-1px);
        }
        
        /* Responsive Design */
        @@media (max-width: 768px) {
            .profile-picture {
                width: 100px !important;
                height: 100px !important;
            }
            
            .card-header h2 {
                font-size: 1.4rem !important;
            }
            
            .card-header p {
                font-size: 0.9rem !important;
            }
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
