@model SO.Application.Features.Commands.AccountModule.Authentication.RegisterUser.RegisterUserCommandRequest
@{
    ViewData["Title"] = "Kayıt Ol";
}

<!-- Background Icons -->
<div class="auth-background-icons">
    <div class="bg-icon bg-icon-1">
        <i class="fas fa-file-contract"></i>
    </div>
    <div class="bg-icon bg-icon-2">
        <i class="fas fa-chart-line"></i>
    </div>
    <div class="bg-icon bg-icon-3">
        <i class="fas fa-users"></i>
    </div>
    <div class="bg-icon bg-icon-4">
        <i class="fas fa-cog"></i>
    </div>
    <div class="bg-icon bg-icon-5">
        <i class="fas fa-shield-alt"></i>
    </div>
    <div class="bg-icon bg-icon-6">
        <i class="fas fa-rocket"></i>
    </div>
    <div class="bg-icon bg-icon-7">
        <i class="fas fa-check-circle"></i>
    </div>
    <div class="bg-icon bg-icon-8">
        <i class="fas fa-download"></i>
    </div>
    <div class="bg-icon bg-icon-9">
        <i class="fas fa-star"></i>
    </div>
    <div class="bg-icon bg-icon-10">
        <i class="fas fa-lightbulb"></i>
    </div>
</div>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2 class="auth-title">Kayıt Ol</h2>
            <p class="auth-subtitle">Yeni hesap oluşturun</p>
        </div>
        
        <form asp-action="Register" method="post" class="auth-form">
            <input type="hidden" asp-for="@ViewData["ReturnUrl"]" />
            
            <div asp-validation-summary="ModelOnly" class="auth-error"></div>
            
            <div class="form-group">
                <label asp-for="FullName" class="form-label">Ad Soyad</label>
                <div class="input-group">
                    <i class="fas fa-user input-icon"></i>
                    <input asp-for="FullName" class="form-input" placeholder="Adınızı ve soyadınızı girin" />
                </div>
                <span asp-validation-for="FullName" class="form-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                <div class="input-group">
                    <i class="fas fa-user input-icon"></i>
                    <input asp-for="UserName" class="form-input" placeholder="Kullanıcı adınızı girin" />
                </div>
                <span asp-validation-for="UserName" class="form-error"></span>
                <small class="form-help">Sadece harf, rakam ve alt çizgi kullanılabilir.</small>
            </div>
            
            <div class="form-group">
                <label asp-for="Email" class="form-label">E-posta</label>
                <div class="input-group">
                    <i class="fas fa-envelope input-icon"></i>
                    <input asp-for="Email" class="form-input" placeholder="ornek@email.com" />
                </div>
                <span asp-validation-for="Email" class="form-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password" class="form-label">Şifre</label>
                <div class="input-group">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="Password" class="form-input" placeholder="En az 8 karakter" />
                </div>
                <span asp-validation-for="Password" class="form-error"></span>
                <small class="form-help">Şifre en az 8 karakter olmalı ve büyük harf, küçük harf, rakam ve özel karakter içermelidir.</small>
            </div>
            
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                <div class="input-group">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="ConfirmPassword" class="form-input" placeholder="Şifrenizi tekrar girin" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="form-error"></span>
            </div>
            
            <button type="submit" class="auth-button">
                <i class="fas fa-user-plus"></i>
                Kayıt Ol
            </button>
        </form>
        
        <div class="auth-footer">
            <p class="auth-link">
                Zaten hesabınız var mı? 
                <a asp-action="Login" class="auth-link-text">Giriş Yap</a>
            </p>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Auth Background */
        body {
            background: linear-gradient(135deg, #0B1426 0%, #1a2332 30%, #2a3f5f 60%, #0B1426 100%) !important;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }
        
        html {
            background: linear-gradient(135deg, #0B1426 0%, #1a2332 30%, #2a3f5f 60%, #0B1426 100%) !important;
        }
        
        .main-content {
            background: linear-gradient(135deg, #0B1426 0%, #1a2332 30%, #2a3f5f 60%, #0B1426 100%) !important;
        }
        
        /* Background Icons */
        .auth-background-icons {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }
        
        .bg-icon {
            position: absolute;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, rgba(74, 111, 165, 0.1), rgba(107, 155, 210, 0.05));
            border: 1px solid rgba(74, 111, 165, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: rgba(74, 111, 165, 0.3);
            font-size: 1.2rem;
            box-shadow: 0 2px 10px rgba(74, 111, 165, 0.1);
        }
        
        .bg-icon-1 { top: 15%; left: 8%; }
        .bg-icon-2 { top: 25%; right: 12%; }
        .bg-icon-3 { bottom: 35%; left: 5%; }
        .bg-icon-4 { top: 45%; right: 8%; }
        .bg-icon-5 { bottom: 25%; right: 25%; }
        .bg-icon-6 { top: 65%; left: 20%; }
        .bg-icon-7 { top: 20%; left: 50%; }
        .bg-icon-8 { bottom: 45%; right: 35%; }
        .bg-icon-9 { top: 35%; left: 35%; }
        .bg-icon-10 { bottom: 15%; left: 60%; }
        
        /* Auth Container */
        .auth-container {
            position: relative;
            z-index: 2;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }
        
        /* Auth Card */
        .auth-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 0.75rem 1.25rem;
            width: 100%;
            max-width: 450px;
            position: relative;
        }
        
        /* Auth Header */
        .auth-header {
            text-align: center;
            margin-bottom: 0.5rem;
        }
        
        .auth-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #0B1426;
            margin-bottom: 0.125rem;
            font-family: 'Inter', sans-serif;
        }
        
        .auth-subtitle {
            color: #64748b;
            font-size: 0.8rem;
            margin: 0;
        }
        
        /* Form Styles */
        .auth-form {
            margin-bottom: 0.5rem;
        }
        
        .form-group {
            margin-bottom: 0.375rem;
        }
        
        .form-label {
            display: block;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }
        
        .input-group {
            position: relative;
        }
        
        .input-icon {
            position: absolute;
            left: 0.4rem;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            font-size: 0.7rem;
            z-index: 3;
        }
        
        .form-input {
            width: 100%;
            padding: 0.4rem 0.4rem 0.4rem 1.5rem;
            border: 2px solid #e5e7eb;
            border-radius: 6px;
            font-size: 0.8rem;
            transition: all 0.3s ease;
            background: #f9fafb;
        }
        
        .form-input:focus {
            outline: none;
            border-color: #4a6fa5;
            background: white;
            box-shadow: 0 0 0 3px rgba(74, 111, 165, 0.1);
        }
        
        .form-input::placeholder {
            color: #9ca3af;
        }
        
        .form-error {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }
        
        .form-help {
            color: #6b7280;
            font-size: 0.8rem;
            margin-top: 0.25rem;
            display: block;
        }
        
        .auth-error {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 0.875rem;
        }
        
        /* Auth Button */
        .auth-button {
            width: 100%;
            background: linear-gradient(135deg, #4a6fa5, #6b9bd2);
            color: white;
            border: none;
            padding: 0.4rem 0.875rem;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            margin-top: 0.125rem;
        }
        
        .auth-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(74, 111, 165, 0.3);
        }
        
        .auth-button:active {
            transform: translateY(0);
        }
        
        /* Auth Footer */
        .auth-footer {
            text-align: center;
            margin-top: 0.25rem;
        }
        
        .auth-link {
            margin-bottom: 0.25rem;
            font-size: 0.8rem;
            color: #6b7280;
        }
        
        .auth-link:last-child {
            margin-bottom: 0;
        }
        
        .auth-link-text {
            color: #4a6fa5;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }
        
        .auth-link-text:hover {
            color: #6b9bd2;
        }
        
        /* Responsive */
        @@media (max-width: 768px) {
            .auth-card {
                padding: 2rem;
                margin: 1rem;
                max-width: 100%;
            }
            
            .auth-title {
                font-size: 1.75rem;
            }
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
