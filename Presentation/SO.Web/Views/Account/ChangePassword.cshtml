@model SO.Application.Features.Commands.AccountModule.Profile.ChangePassword.ChangePasswordCommandRequest
@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">
                <div class="card-header position-relative" style="background: linear-gradient(135deg, #0B1426 0%, #1a2332 50%, #2a3f5f 100%); border: none; padding: 2rem;">
                    <h2 class="text-white mb-0" style="font-weight: 600; font-size: 1.8rem;">
                        <i class="fas fa-lock me-2"></i>
                        Şifre Değiştir
                    </h2>
                    <p class="text-white-50 mb-0 mt-2" style="font-size: 1rem;">Hesap güvenliğiniz için şifrenizi güncelleyin</p>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 10px; border: none;"></div>

                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="CurrentPassword" class="form-label fw-bold" style="color: #495057;">
                                        <i class="fas fa-key me-2 text-primary"></i>Mevcut Şifre
                                    </label>
                                    <input asp-for="CurrentPassword" class="form-control modern-input" type="password" style="border-radius: 10px; border: 2px solid #e9ecef; padding: 0.75rem; transition: all 0.3s ease;" />
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="NewPassword" class="form-label fw-bold" style="color: #495057;">
                                        <i class="fas fa-lock me-2 text-primary"></i>Yeni Şifre
                                    </label>
                                    <input asp-for="NewPassword" class="form-control modern-input" type="password" style="border-radius: 10px; border: 2px solid #e9ecef; padding: 0.75rem; transition: all 0.3s ease;" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    <div class="form-text" style="color: #6c757d; font-size: 0.875rem;">
                                        <i class="fas fa-info-circle me-1"></i>En az 8 karakter, büyük harf, küçük harf, rakam ve özel karakter içermelidir
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="ConfirmNewPassword" class="form-label fw-bold" style="color: #495057;">
                                        <i class="fas fa-check-circle me-2 text-primary"></i>Yeni Şifre Tekrar
                                    </label>
                                    <input asp-for="ConfirmNewPassword" class="form-control modern-input" type="password" style="border-radius: 10px; border: 2px solid #e9ecef; padding: 0.75rem; transition: all 0.3s ease;" />
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-modern" style="border-radius: 10px; padding: 0.75rem 2rem; font-weight: 500; transition: all 0.3s ease; border: none; box-shadow: 0 2px 10px rgba(13, 110, 253, 0.2);">
                                <i class="fas fa-save me-2"></i>
                                Şifreyi Değiştir
                            </button>
                            <a asp-action="Profile" class="btn btn-secondary btn-modern" style="border-radius: 10px; padding: 0.75rem 2rem; font-weight: 500; transition: all 0.3s ease; border: none; box-shadow: 0 2px 10px rgba(108, 117, 125, 0.2);">
                                <i class="fas fa-arrow-left me-2"></i>
                                Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Modern Input Focus Effects */
        .modern-input:focus {
            border-color: #4a6fa5 !important;
            box-shadow: 0 0 0 3px rgba(74, 111, 165, 0.1) !important;
            outline: none;
        }
        
        /* Modern Button Hover Effects */
        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15) !important;
        }
        
        .btn-modern:active {
            transform: translateY(0);
        }
        
        /* Form Group Hover Effects */
        .form-group:hover .modern-input {
            border-color: #4a6fa5 !important;
        }
        
        /* Card Hover Effect */
        .card:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }
        
        /* Password Strength Indicator */
        .password-strength {
            height: 4px;
            background: #e9ecef;
            border-radius: 2px;
            margin-top: 0.5rem;
            overflow: hidden;
        }
        
        .password-strength-bar {
            height: 100%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }
        
        .strength-weak { background: #dc3545; width: 25%; }
        .strength-fair { background: #ffc107; width: 50%; }
        .strength-good { background: #17a2b8; width: 75%; }
        .strength-strong { background: #28a745; width: 100%; }
        
        /* Responsive Design */
        @@media (max-width: 768px) {
            .card-header h2 {
                font-size: 1.4rem !important;
            }
            
            .card-header p {
                font-size: 0.9rem !important;
            }
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Password strength indicator
        document.addEventListener('DOMContentLoaded', function() {
            const newPasswordInput = document.querySelector('input[name="NewPassword"]');
            if (newPasswordInput) {
                const strengthBar = document.createElement('div');
                strengthBar.className = 'password-strength';
                strengthBar.innerHTML = '<div class="password-strength-bar"></div>';
                newPasswordInput.parentNode.appendChild(strengthBar);
                
                newPasswordInput.addEventListener('input', function() {
                    const password = this.value;
                    const strength = calculatePasswordStrength(password);
                    updateStrengthBar(strengthBar.querySelector('.password-strength-bar'), strength);
                });
            }
        });
        
        function calculatePasswordStrength(password) {
            let score = 0;
            if (password.length >= 8) score++;
            if (/[a-z]/.test(password)) score++;
            if (/[A-Z]/.test(password)) score++;
            if (/[0-9]/.test(password)) score++;
            if (/[^A-Za-z0-9]/.test(password)) score++;
            return score;
        }
        
        function updateStrengthBar(bar, strength) {
            bar.className = 'password-strength-bar';
            if (strength <= 1) {
                bar.classList.add('strength-weak');
            } else if (strength <= 2) {
                bar.classList.add('strength-fair');
            } else if (strength <= 3) {
                bar.classList.add('strength-good');
            } else {
                bar.classList.add('strength-strong');
            }
        }
    </script>
}
