@using SO.Application.Features.Queries.AccountModule.Account.GetByIdAccount
@using SO.Application.DTOs.AccountModule.Account
@model GetByIdAccountQueryResponse

@{
    ViewData["Title"] = "Delete Client";
    var account = Model.Result as SingleAccount;
}

<div class="container-fluid">
    <h1 class="fw-bold text-danger mb-4"><i class="fas fa-user-times me-2"></i>Delete Client</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-warning">
                <strong>Are you sure you want to delete this client?</strong>
            </div>
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h4 class="card-title mb-3">@account.CompanyName</h4>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>Contact Person:</strong> @account.ContactPerson</li>
                        <li class="list-group-item"><strong>Email:</strong> @account.Email</li>
                        <li class="list-group-item"><strong>Status:</strong> @(account.IsActive ? "Active" : "Inactive")</li>
                    </ul>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@account.Id" />
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Delete</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 