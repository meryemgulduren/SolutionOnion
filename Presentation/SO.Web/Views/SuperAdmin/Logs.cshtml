@{
    ViewData["Title"] = "Log Görüntüleme - SuperAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">
                <i class="fas fa-list-alt mr-2"></i>Log Görüntüleme
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-server mr-2"></i>Sistem Logları
                    </h6>
                    <a href="@Url.Action("Dashboard", "SuperAdmin")" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left mr-2"></i>Dashboard'a Dön
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle mr-2"></i>
                        Log görüntüleme özelliği henüz implement edilmedi.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
